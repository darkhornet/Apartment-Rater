<%- model_class = Unit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:apartment_id) %>:</strong></dt>
  <dd><%= @unit.apartment_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bedrooms) %>:</strong></dt>
  <dd><%= @unit.bedrooms %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bathrooms) %>:</strong></dt>
  <dd><%= @unit.bathrooms %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sqft) %>:</strong></dt>
  <dd><%= @unit.sqft %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @unit.price %></dd>
</dl>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              apartment_units_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_apartment_unit_path(@unit.apartment, @unit), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              apartment_unit_path(@unit.apartment, @unit),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
